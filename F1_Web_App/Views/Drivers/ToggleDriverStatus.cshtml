@model F1_Web_App.Models.DriverListViewModel

@{
    ViewData["Title"] = "Toggle Driver Status";
}

<h2>Toggle Driver Status</h2>

<form asp-action="ToggleDriverStatus" method="post">
    <div class="form-group">
        <label asp-for="IsRetired" class="control-label"></label>
        <input asp-for="IsRetired" class="form-control" type="checkbox" />
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
