@using F1_Web_App.Data.Models
@model ResultListViewModel

@{
    ViewData["Title"] = "Race Results";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h5 class="mb-0">Race: @Model.CircuitName</h5>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Position</th>
            <th>Driver Number</th>
            <th>Driver Name</th>
            <th>Total Points</th>
        </tr>
    </thead>
    <tbody>
        @{
            int position = 1;
        }
        @foreach (var result in Model.Results)
        {
            <tr>
                <td>@position</td>
                <td>@result.DriverNumber</td>
                <td>@result.DriverName</td>
                <td>@result.Points</td>
            </tr>
            position++;
        }
    </tbody>
</table>
