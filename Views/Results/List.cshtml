@using F1_Web_App.Data.Models
@model IEnumerable<F1_Web_App.Models.ResultViewModel>

@{
    ViewData["Title"] = "Race Results";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h5 class="mb-0">Race: @EventName</h5>
</div>

@foreach (var result in Model)
{
    <div class="row align-items-center mb-4 py-3">
        <div class="col-md-12 text-start">
            
            <p>Driver: @result.DriverName</p>
            <p>Driver Number: @result.DriverNumber</p>
            <p>Team: @result.TeamName</p>
            <p>Points: @result.Points</p>
        </div>
    </div>
}
