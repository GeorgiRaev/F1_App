@model IEnumerable<F1_Web_App.Models.TeamListViewModel>

@{
    ViewData["Title"] = "Teams";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>

@foreach (var team in Model)
{
    <div class="row align-items-center mb-4 py-3">
        <div class="col-md-2 text-center">
            @if (!string.IsNullOrEmpty(team.TeamImageUrl))
            {
                <img src="@team.TeamImageUrl" class="img-fluid" style="max-height: 200px; object-fit: contain;" alt="@team.TeamName" />
            }
            else
            {
                <img src="~/img/no-image-available-02.jpg" class="img-fluid" style="max-height: 200px; object-fit: contain;" alt="No Image Available" />
            }
        </div>
        <div class="col-md-10 text-start">
            <h5 class="mb-0">@team.TeamName</h5>
            <h5 class="mt-3">Drivers:</h5>
            <ul>
                @foreach (var driver in team.Drivers)
                {
                    <li>@driver.Name - #@driver.DriverNumber</li>
                }
            </ul>
            <hr/>
        </div>
    </div>
}
